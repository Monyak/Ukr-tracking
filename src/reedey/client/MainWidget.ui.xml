<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
    xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    
	<ui:style>
		.header {
			width:100%;
			height:100%;
			background-color: gray;
			border-bottom-width: 1px;
			border-bottom-color: black;
		}
		.content {
			width:100%;
			height:100%;
			display:table;
		}
		.container {
			position:absolute;
			height:100%;
			width:100%;
		}
		.default-label {
		    vertical-align: middle;
		    text-align: center;
		    display: table-cell;
			font-size: 2em;
		}
	</ui:style>
	<g:LayoutPanel styleName="{style.container}">
		<g:layer top="0" height="3em" left="0" right="0">
			<g:HorizontalPanel styleName="{style.header}" ui:field="header"></g:HorizontalPanel>
		</g:layer>
		<g:layer top="3em" bottom="0" left="0" right="0">
			<g:SimplePanel styleName="{style.content}" ui:field="content">
				<g:HTML styleName="{style.default-label}">Select component</g:HTML>
			</g:SimplePanel>
		</g:layer>
	</g:LayoutPanel>
</ui:UiBinder>