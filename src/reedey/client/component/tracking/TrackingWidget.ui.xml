<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
	</ui:style>
	<g:FlowPanel styleName="tracking-container">
		<g:HorizontalPanel styleName="tracking-controls">
			<g:cell width="60%">
				<g:VerticalPanel styleName="tracking-fields">
					<g:HorizontalPanel styleName="tracking-field-row">
						<g:cell width="30%" verticalAlignment="middle"
							horizontalAlignment="left">
							<g:HTML styleName="tracking-field-label">Bar code:</g:HTML>
						</g:cell>
						<g:cell width="70%" verticalAlignment="middle"
							horizontalAlignment="left">
							<g:TextBox ui:field="barCodeTextBox" styleName="tracking-field-input"></g:TextBox>
						</g:cell>
					</g:HorizontalPanel>
					<g:HorizontalPanel styleName="tracking-field-row">
						<g:cell width="30%" verticalAlignment="middle"
							horizontalAlignment="left">
							<g:HTML styleName="tracking-field-label">Description:</g:HTML>
						</g:cell>
						<g:cell width="70%" verticalAlignment="middle"
							horizontalAlignment="left">
							<g:TextBox ui:field="nameTextBox" styleName="tracking-field-input"></g:TextBox>
						</g:cell>
					</g:HorizontalPanel>
				</g:VerticalPanel>
			</g:cell>
			<g:cell verticalAlignment="middle">
				<g:HTML ui:field="addButton" styleName="tracking-button icon-plus" title="Add"></g:HTML>
			</g:cell>
			<g:cell verticalAlignment="middle">
				<g:HTML ui:field="settingsButton" styleName="tracking-button icon-cogs" title="Settings"></g:HTML>
			</g:cell>
		</g:HorizontalPanel>
		<g:FlowPanel styleName="tracking-list-scroll">
			<g:ScrollPanel  width="100%" height="100%">
				<g:VerticalPanel ui:field="trackingList" styleName="tracking-list"></g:VerticalPanel>
			</g:ScrollPanel>
		</g:FlowPanel>
	</g:FlowPanel>
</ui:UiBinder> 